<?xml version="1.0" encoding="utf-8"?>
<carbon.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ClearFragment">


    <carbon.widget.Banner
        android:layout_width="212dp"
        android:layout_height="212dp"
        android:elevation="5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/bg_numeral"
        app:layout_constraintRight_toRightOf="parent">

        <carbon.widget.TextView
            android:id="@+id/numeral"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:text="0"
            android:textSize="62sp"
            android:textColor="@color/black"/>

        <carbon.widget.TextView
            android:id="@+id/numeral_files"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/numeral"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:text="Проверка com.facebook.katana"
            android:textSize="9sp"
            android:textColor="@color/black"/>

    </carbon.widget.Banner>

</carbon.widget.ConstraintLayout>